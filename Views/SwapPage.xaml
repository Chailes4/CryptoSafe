<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoSafe.Views.SwapPage">

    <Grid RowDefinitions="*,Auto">
        <!-- Auto for the bottom navigation bar -->
        <!-- Main Content -->
        <StackLayout Grid.Row="0" Padding="10" Spacing="10">

            <Label Text="Swap From" FontAttributes="Bold" />
            <Picker x:Name="TokenFromPicker" Title="Select Token" />

            <Label Text="Swap To" FontAttributes="Bold" />
            <Picker x:Name="TokenToPicker" Title="Select Token" />

            <Label Text="Amount to Swap" FontAttributes="Bold" />
            <Entry x:Name="SwapAmountEntry" Placeholder="Enter amount" Keyboard="Numeric" />

            <!-- Minimum Amount Label -->
            <Label x:Name="MinAmountLabel" 
                   Text="Minimum swap amount is 0.01" 
                   TextColor="Red" 
                   FontSize="Small" 
                   HorizontalOptions="Start" 
                   IsVisible="False"/>

            <Button Text="Swap" Clicked="OnSwapButtonClicked" />
            
        </StackLayout>
    </Grid>
</ContentPage>

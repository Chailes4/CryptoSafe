<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoSafe.Views.ReceiveTokenPage"
             Shell.TabBarIsVisible="False">

    <VerticalStackLayout Padding="10">
        <Label Text="Recieve"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,100"/>

        <Label Text="Your User ID (Share this to receive tokens):" 
               FontSize="Medium" 
               HorizontalOptions="Center" />

        <Label x:Name="UserIdLabel" 
               FontSize="Small" 
               HorizontalOptions="Center" 
               TextColor="Black" />

        <Button Text="Copy User ID"
                Clicked="OnCopyButtonClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>